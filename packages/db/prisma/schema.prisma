// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "sqlite"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model User {
    userId       String   @id
    profileImg   String
    firstName    String
    lastName     String
    email        String
    lastLoggedIn DateTime @default(now())

    teachesAt isTeacherAt[]
    isStudentAt isStudentAt[]
    
    messages Message[]
}

model Group {
    groupId   String @id @default(cuid())
    groupName String

    groupImage String

    createdAt DateTime @default(now())

    subgroups Subgroup[]

    teachers isTeacherAt[]
}

model Subgroup {
    subgroupId String @id
    
    group Group @relation(fields: [groupId], references: [groupId])
    groupId String

    students isStudentAt[]

    createdAt DateTime @default(now())

    @@index([groupId])

}

model isTeacherAt{
    user User @relation(fields: [userId], references: [userId])
    userId String

    group Group @relation(fields: [groupId], references: [groupId])
    groupId String

    @@id([userId, groupId])
    @@index([userId])
    @@index([groupId])
}

model isStudentAt {
    user User @relation(fields: [userId], references: [userId])
    userId String

    subgroup Subgroup @relation(fields: [subgroupId], references: [subgroupId])
    subgroupId String

    @@id([userId, subgroupId])
    @@index([userId])
    @@index([subgroupId])
}

model Message {
    messageId String @id @default(cuid())

    author User @relation(fields: [authorId], references: [userId])
    authorId String

    groupId String

    content String

    createdAt DateTime  @default(now())
    updatedAt DateTime?

    @@index([authorId])
}

