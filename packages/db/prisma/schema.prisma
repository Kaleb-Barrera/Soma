// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model User {
    userId       String   @id
    profileImg   String
    firstName    String
    lastName     String
    email        String
    lastLoggedIn DateTime @default(now())

    ownedGroups    Group[] @relation("OwnedGroups")
    partakenGroups Group[] @relation("PartakenGroups")
}

model Message {
    messageId String @id @default(cuid())

    authorName String
    authorImg  String

    groupId String
    group   Group  @relation(fields: [groupId], references: [groupId])

    content String

    createdAt DateTime  @default(now())
    updatedAt DateTime?

    @@index([groupId])
}

model Group {
    groupId   String @id @default(cuid())
    groupName String

    groupImage String

    owners       User[] @relation("OwnedGroups")
    participants User[] @relation("PartakenGroups")

    messages Message[]

    createdAt DateTime @default(now())
}
